<div class="h-16 w-full fixed top-0 bg-blue-500 z-50">
    <div class="mx-w-2xl h-full w-full mx-auto flex items-center justify-between px-20 flex">
        <%= link_to root_path, class: "text-xl text-gray-100 flex items-center" do %>
            <%= image_tag("icon.png") %>
            <span > PLASMA ENVOY </span>
            <% end %>
        <div class="flex items-center gap-2">
            <% if current_user %>
                <%= link_to "Sign Out", destroy_user_session_path, data: {turbo_method: :delete}, class:"text-white"%>
            <% else %>
                <%= link_to "Login", user_session_path, class:"text-white bg-pink-400 rounded-lg p-2"%>
                <%= link_to "Sign Up", new_user_registration_path, class:"text-white"%>
            <%end%>
            <%= link_to cart_path do%>
                <%= render "layouts/cart", cart: @current_cart %>
                <%end%>
        </div>
    </div>
</div>