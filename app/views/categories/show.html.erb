<div class="w-full flex flex-col">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>


  <div class="relative flex items-center justify-center">
  <%= image_tag(@category.image, class: "h-80 w-full object-cover rounded-lg rounded-lg brightness-75 ") if @category.image.attached?%>
  <h1 class="font-bold text-7xl text-center font-stark text-indigo-500  absolute drop-shadow-[0_4.2px_4.2px_rgba(0,0,0,0.8)]"><%= @category.name%></h1>
  </div>
  <div class="text-2xl text-center mt-4">
    <%= @category.description %>
  </div>


  <div id="products" class="min-w-full grid sm:grid-cols-4 gap-8">
    <% @category.products.each do |product| %>
      <%= render "products/product", product: product %>
    <% end %>
  </div>


  <% if current_admin %>
    <br/>
      <div class="w-full flex justify-center items-center mt-16 gap-4">
        <%= link_to "Edit this category", edit_category_path(@category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <%= link_to "Back to categories", categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
        <div class="inline-block ml-2">
          <%= button_to "Destroy this category", @category, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    </div>
  <%end%>
</div>