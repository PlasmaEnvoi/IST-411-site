<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Plasma Envoy" %>

    <h1 class="font-bold text-9xl text-center font-stark text-indigo-500">Plasma Envoy</h1>

  <div id="products" class="min-w-full grid md:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
  <div class="mt-4 w-full">
    <%= link_to "Shop by Category", categories_path, class: "rounded-lg bg-white h-64 w-full text-2xl font-stark p-2"%>
  </div>
</div>
